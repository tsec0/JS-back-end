

        <main class="search">
            <!-- Search Page (Only for logged-in users) -->
            <section id="search">
                <h2>Search by Location</h2>

                <form class="search-wrapper cf" method="" action="#">
                    <input id="{{search}}" type="text" name="search" value="{{search}}" placeholder="Search here..." required />
                    <button type="submit">Search</button>
                </form>

                {{#each animals}}
                    {{>animalPartial}}
                {{else}}
                    <!-- Display an h2 if there are no posts -->
                    <div id="no-post">
                        <h2>There are no results found.</h2>
                    </div>
                {{/each}}
                </div>
            </section>
        </main>
